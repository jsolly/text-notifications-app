{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"baseUrl": "..",
		"paths": {
			"@text-notifications/shared": ["../../shared/src"],
			"@text-notifications/shared/*": ["../../shared/src/*"]
		}
	},
	"include": ["../**/*"],
	"exclude": ["node_modules", "dist"]
}

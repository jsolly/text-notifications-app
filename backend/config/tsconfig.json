{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": ["ES2022"],
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"baseUrl": ".",
		"paths": {
			"@text-notifications/shared": ["../../shared/src"],
			"@text-notifications/shared/*": ["../../shared/src/*"]
		}
	}
}

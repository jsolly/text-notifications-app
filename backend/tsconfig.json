{
	"compilerOptions": {
		"target": "ES2023",
		"module": "NodeNext",
		"lib": ["ES2023"],
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"sourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"baseUrl": ".",
		"paths": {
			"@text-notifications/shared": ["../../shared/src"],
			"@text-notifications/shared/*": ["../../shared/src/*"]
		}
	}
}

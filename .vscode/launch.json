{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "aws-sam",
			"request": "direct-invoke",
			"name": "signup-processor (template invoke)",
			"invokeTarget": {
				"target": "template",
				"templatePath": "${workspaceFolder}/template.yaml",
				"logicalId": "SignupProcessorFunction"
			},
			"lambda": {
				"runtime": "nodejs22.x",
				"payload": {
					"path": "${workspaceFolder}/backend/events/signup.json"
				}
			},
			"sam": {
				"localArguments": ["--env-vars", "${workspaceFolder}/.env.json"]
			}
		},

		{
			"type": "aws-sam",
			"request": "direct-invoke",
			"name": "message-sender:index.handler (nodejs22.x)",
			"invokeTarget": {
				"target": "code",
				"projectRoot": "${workspaceFolder}/backend/functions/message-sender",
				"lambdaHandler": "index.handler"
			},
			"lambda": {
				"runtime": "nodejs22.x",
				"payload": {
					"path": "${workspaceFolder}/backend/events/message-sender.json"
				}
			},
			"sam": {
				"localArguments": ["--env-vars", "${workspaceFolder}/.env.json"]
			}
		},
		{
			"type": "aws-sam",
			"request": "direct-invoke",
			"name": "apod-photo-fetcher:index.handler (nodejs22.x)",
			"invokeTarget": {
				"target": "code",
				"projectRoot": "${workspaceFolder}/backend/functions/apod-photo-fetcher",
				"lambdaHandler": "index.handler"
			},
			"lambda": {
				"runtime": "nodejs22.x",
				"payload": {
					"path": "${workspaceFolder}/backend/events/apod-photo-fetcher.json"
				}
			},
			"sam": {
				"localArguments": ["--env-vars", "${workspaceFolder}/.env.json"]
			}
		},
		{
			"command": "npm run dev",
			"name": "Development server",
			"request": "launch",
			"type": "node-terminal",
			"skipFiles": ["**/node_modules/**"]
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome against localhost",
			"url": "http://localhost:4321",
			"webRoot": "${workspaceFolder}/frontend/src",
			"sourceMapPathOverrides": {
				"vite:///src/*": "${webRoot}/*"
			},
			"skipFiles": ["**/node_modules/**"]
		}
	],
	"compounds": [
		{
			"name": "Launch Dev Server and Chrome",
			"configurations": [
				"Development server",
				"Launch Chrome against localhost"
			]
		}
	]
}

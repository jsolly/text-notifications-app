{
	"name": "text-notifications-app",
	"version": "1.0.0",
	"description": "Text notifications app with testing change",
	"private": true,
	"workspaces": ["frontend", "backend", "shared"],
	"scripts": {
		"test": "vitest run --config config/vitest.config.ts",
		"test:unit": "vitest run --config config/vitest.config.ts -t 'unit'",
		"test:integration": "vitest run --config config/vitest.config.ts -t 'integration'",
		"test:watch": "vitest --config config/vitest.config.ts",
		"dev": "concurrently \"npm:dev:shared\" \"npm:dev:frontend\"",
		"dev:shared": "cd shared && npm run dev",
		"dev:frontend": "cd frontend && npm run dev",
		"build": "npm run build:shared && npm run build:frontend && npm run build:backend",
		"build:shared": "cd shared && npm run build",
		"build:frontend": "cd frontend && npm run build",
		"build:backend": "cd backend && npm run build:lambda",
		"lint": "npm run biome-check",
		"lint-fix": "npm run biome-check-fix",
		"format": "npm run biome-format",
		"type-check": "concurrently \"npm:type-check -w frontend\" \"npm:type-check -w backend\"",
		"lint-staged": "lint-staged",
		"biome-check": "biome lint . --config-path config/biome.json",
		"biome-check-fix": "biome lint --config-path config/biome.json --write .",
		"biome-format": "biome format --config-path config/biome.json --write .",
		"vitest": "vitest run --config config/vitest.config.ts",
		"vitest:watch": "vitest --config config/vitest.config.ts"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.4",
		"@biomejs/biome": "^1.9.4",
		"@types/aws-lambda": "^8.10.147",
		"@types/node": "^22.15.17",
		"concurrently": "^8.2.2",
		"dotenv": "^16.4.7",
		"globby": "^14.0.2",
		"html-minifier": "^4.0.0",
		"husky": "^9.1.7",
		"jsdom": "^24.1.3",
		"lint-staged": "^15.2.10",
		"ts-node": "^10.9.2",
		"twilio": "^5.5.2",
		"typescript": "^5.3.3",
		"vitest": "^3.0.5"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,astro,vue}": [
			"biome format --config-path config/biome.json --write",
			"biome lint --config-path config/biome.json"
		],
		"*.{yml,yaml}": ["echo 'Skipping biome for YAML files'"]
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.802.0"
	}
}

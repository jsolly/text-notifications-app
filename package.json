{
	"name": "text-notifications-app",
	"version": "1.0.0",
	"description": "Text notifications app with testing change",
	"private": true,
	"workspaces": ["frontend", "backend", "shared"],
	"scripts": {
		"test": "concurrently \"vitest run --config config/vitest.config.ts\" \"pytest --config-file config/pyproject.toml\"",
		"test:unit": "concurrently \"vitest run --config config/vitest.config.ts -t 'unit'\" \"pytest --config-file config/pyproject.toml -k 'not integration'\"",
		"test:integration": "concurrently \"vitest run --config config/vitest.config.ts -t 'integration'\" \"pytest --config-file config/pyproject.toml -m integration\"",
		"test:watch": "concurrently \"vitest --config config/vitest.config.ts\" \"ptw --config config/pyproject.toml\"",
		"dev": "concurrently \"npm run dev:shared\" \"npm run dev:frontend\"",
		"dev:shared": "cd shared && npm run dev",
		"dev:frontend": "cd frontend && npm run dev",
		"build": "concurrently \"npm run build:shared\" \"npm run build:frontend\"",
		"build:shared": "cd shared && npm run build",
		"build:frontend": "cd frontend && npm run build",
		"lint": "concurrently \"npm run biome-check\" \"npm run ruff-check\"",
		"lint-fix": "concurrently \"npm run biome-check-fix\" \"npm run ruff-check-fix\"",
		"format": "concurrently \"npm run biome-format\" \"npm run ruff-format\"",
		"type-check": "npm run type-check -w frontend && npm run type-check -w backend",
		"lint-staged": "lint-staged",
		"biome-check": "biome lint . --config-path config/biome.json",
		"biome-check-fix": "biome lint --config-path config/biome.json --write .",
		"biome-format": "biome format --config-path config/biome.json --write .",
		"ruff-check": "ruff check --config config/pyproject.toml .",
		"ruff-check-fix": "ruff check --config config/pyproject.toml --fix .",
		"ruff-format": "ruff format --config config/pyproject.toml .",
		"pytest": "pytest --config-file config/pyproject.toml",
		"vitest": "vitest run --config config/vitest.config.ts",
		"vitest:watch": "vitest --config config/vitest.config.ts"
	},
	"devDependencies": {
		"@types/aws-lambda": "^8.10.147",
		"@types/node": "^22.15.15",
		"concurrently": "^8.2.2",
		"dotenv": "^16.4.7",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"vitest": "^3.0.5",
		"@biomejs/biome": "^1.9.4",
		"globby": "^14.0.2",
		"html-minifier": "^4.0.0",
		"jsdom": "^24.1.3",
		"@astrojs/check": "^0.9.4"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,astro,vue}": ["biome format --write", "biome lint"],
		"*.{yml,yaml}": ["echo 'Skipping biome for YAML files'"],
		"**/*.py": [
			"ruff check --config config/pyproject.toml --fix",
			"ruff format --config config/pyproject.toml"
		]
	},
	"dependencies": {}
}

{
	"name": "text-notifications-app",
	"version": "1.0.0",
	"description": "Text notifications app with testing change",
	"private": true,
	"type": "module",
	"workspaces": [
		"frontend",
		"backend",
		"shared",
		"tests",
		"backend/functions/signup-processor",
		"backend/functions/message-sender"
	],
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
		"dev": "concurrently \"npm:dev:shared\" \"npm:dev:frontend\"",
		"dev:shared": "cd shared && npm run dev",
		"dev:frontend": "cd frontend && npm run dev",
		"build": "npm run build:shared && npm run build:frontend",
		"build:shared": "cd shared && npm run build",
		"build:frontend": "cd frontend && npm run build",
		"build:backend": "cd backend && npm run build:lambda",
		"deploy:lambda": "cd backend && npm run deploy:lambda",
		"validate": "npm run check && npm run check:typescript && npm run check:astro && npm run check:terraform",
		"lint": "npx @biomejs/biome lint --config-path config/biome.jsonc",
		"check": "npx @biomejs/biome lint --config-path config/biome.jsonc",
		"check:fix": "npx @biomejs/biome lint --config-path config/biome.jsonc --write",
		"check:astro": "cd frontend && npm run check:astro",
		"check:typescript": "tsc --build config/tsconfig.json",
		"check:terraform": "terraform validate",
		"format": "npx @biomejs/biome format --config-path config/biome.jsonc --write",
		"test": "vitest --config config/vitest.config.ts --no-watch",
		"test:integration": "npx vitest run --config config/vitest.config.ts -t 'integration'",
		"test:unit": "vitest --config config/vitest.config.ts --no-watch -t 'unit'",
		"test:watch": "npx vitest --config config/vitest.config.ts",
		"clean": "npm run clean:shared && npm run clean:frontend",
		"clean:shared": "cd shared && npm run clean",
		"clean:frontend": "cd frontend && npm run clean"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.4",
		"@biomejs/biome": "2.0.0-beta.5",
		"concurrently": "^9.1.2",
		"husky": "^9.1.7",
		"typescript": "^5.8.2",
		"vitest": "^3.1.3"
	}
}

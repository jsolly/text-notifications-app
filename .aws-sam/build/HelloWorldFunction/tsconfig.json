{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"lib": ["es2018"],
		"strict": true,
		"rootDir": "./",
		"outDir": "./dist",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "**/*.test.ts"]
}

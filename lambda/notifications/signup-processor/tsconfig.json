{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./",
		"paths": {
			"shared/*": ["../../../shared/*"]
		}
	},
	"include": ["./**/*", "../../../shared/**/*"],
	"exclude": ["node_modules", "dist"]
}

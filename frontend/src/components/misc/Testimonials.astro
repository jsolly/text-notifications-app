---
import Testimonial from "./Testimonial.astro";

const testimonials = [
	{
		quote:
			"Now I don't have to ask Alexa about the weather every morning, I just get a text",
		author: "Holly Solly",
		role: "Wife",
		rating: 5,
	},
	{
		quote: "I love the instant crypto notifications. To the Moon!",
		author: "John Smith",
		role: "Crypto Enthusiast",
		rating: 5,
	},
];
---
<section>
  <div class="container mx-auto">
    <div class="max-w-4xl mx-auto bg-white/90 backdrop-blur-sm rounded-xl p-6">
      <div class="flex flex-col divide-slate-200">
        {testimonials.map((testimonial, index) => (
          <div class={`${index > 0 ? 'pt-8 mt-8' : ''}`}>
            <Testimonial
              quote={testimonial.quote}
              author={testimonial.author}
              role={testimonial.role}
              rating={testimonial.rating}
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</section> 
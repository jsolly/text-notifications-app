---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/structural/Hero.astro";
import Features from "../components/misc/Features.astro";
import MessagePreview from "../components/misc/MessagePreview.astro";
import Testimonial from "../components/misc/Testimonial.astro";
import Footer from "../components/structural/Footer.astro";
import Background from "../components/structural/Background.astro";
import ContactInformation from "../components/signup/contact-info/UserContactInfo.astro";
import Notifications from "../components/notifications/Notifications.astro";
import UserPreferences from "../components/signup/UserPreferences.astro";
import ComingSoon from "../components/notifications/ComingSoon.astro";
import SignUpHeader from "../components/signup/SignUpHeader.astro";
import FormSubmission from "../components/signup/FormSubmission.astro";
import BetaBanner from "../components/structural/BetaBanner.astro";

// Define Open Graph metadata
const title =
	"TextNotifications.app - Timely Notifications about the events that matter to you";

const shortTitle = "Never Miss What Matters";
const description =
	"Timely Notifications about the events that matter to you, delivered straight to your phone via text message.";
---

<Layout 
  title={title}
  description={description}
>
  <Background>
    <BetaBanner />
    <div class="container mx-auto px-4 py-8 md:py-12 relative z-10">
      <Hero title={shortTitle} description={description} />
      
      <!-- Card container with shared background -->
      <div class="max-w-6xl mx-auto bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-blue-100/50 overflow-hidden" style="box-shadow: 0 10px 40px -10px rgba(37, 99, 235, 0.2), 0 0 20px 0 rgba(37, 99, 235, 0.1);">
        <div class="flex flex-col lg:flex-row">
          <!-- Form section -->
          <div class="w-full p-6 md:p-8 relative">
            <div>
              <SignUpHeader />
              
              <FormSubmission>
                <!-- Notifications section in two columns -->
                <Notifications />

                <!-- Preferences section -->
                <div class="mt-8">
                  <UserPreferences />
                </div>
                
                <!-- Coming Soon Section -->
                <ComingSoon />

                <!-- Contact section -->
                <div class="mt-12 max-w-2xl mx-auto">
                  <ContactInformation />
                </div>
              </FormSubmission>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Features and Message Preview Section -->
      <div class="mt-20 max-w-6xl mx-auto">
        <!-- Mobile: Stack Features and MessagePreview vertically -->
        <div class="md:hidden">
          <Features />
          <div class="mt-12 flex justify-center">
            <MessagePreview />
          </div>
        </div>
        
        <!-- Desktop: Features in single column with phone on right -->
        <div class="hidden md:flex items-center gap-12">
          <!-- Left side: Features in single column -->
          <div class="w-1/2">
            <Features layout="single" />
          </div>
          
          <!-- Right side: Phone preview -->
          <div class="w-1/2 flex justify-center">
            <MessagePreview />
          </div>
        </div>
      </div>
      
      <div class="mt-20">
        <Testimonial />
      </div>
    </div>
    
    <Footer />
  </Background>
</Layout>
{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"include": [
			"**/*.js",
			"**/*.jsx",
			"**/*.ts",
			"**/*.tsx",
			"**/*.json",
			"**/*.astro",
			"**/*.vue"
		],
		"ignore": [
			"**/*.min.js",
			"**/node_modules/**/*",
			"frontend/.astro/**/*",
			"**/dist/**/*",
			"**/backend/functions/shared/db.d.ts",
			"**/package-lock.json"
		]
	}
}

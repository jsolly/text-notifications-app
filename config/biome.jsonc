{
	"$schema": "https://biomejs.dev/schemas/2.0.0-beta.5/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"tests/**/*.{ts,tsx,mts,json}",
			"scripts/**/*.{json}",
			"backend/**/*.{ts,tsx,mts,json}",
			"frontend/**/*.{ts,tsx,mts,json,vue,css}",
			"shared/**/*.{ts,tsx,mts,json}",
			"config/**/*.{json,jsonc,ts}",
			"*.json"
		]
	}
}

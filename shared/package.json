{
	"name": "@text-me-when/shared",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"browser": "./dist/index.browser.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"browser": "./dist/index.browser.js",
				"default": "./dist/index.js"
			}
		},
		"./db": {
			"import": "./dist/db.js",
			"types": "./dist/db.d.ts"
		}
	},
	"scripts": {
		"build": "esbuild src/index.ts --bundle --platform=node --target=es2020 --outfile=dist/index.js --format=esm --sourcemap && tsc --emitDeclarationOnly",
		"dev": "esbuild src/index.ts --bundle --platform=node --target=es2020 --outfile=dist/index.js --format=esm --sourcemap --watch",
		"lint": "eslint . --ext .ts",
		"clean": "rm -rf dist"
	},
	"dependencies": {
		"@neondatabase/serverless": "^0.7.2",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/node": "^20.11.24",
		"esbuild": "^0.25.0",
		"eslint": "^8.57.0",
		"typescript": "^5.3.3"
	}
}

{
	"compilerOptions": {
		"target": "ES2023",
		"module": "NodeNext",
		"lib": ["ES2023"],
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"composite": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"rootDir": "src",
		"baseUrl": ".",
		"paths": {
			"@text-notifications/shared/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}

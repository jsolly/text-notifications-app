{
	"compilerOptions": {
		"target": "es2020",
		"strict": true,
		"strictNullChecks": false,
		"preserveConstEnums": true,
		"noEmit": true,
		"sourceMap": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"inlineSources": true,
		"sourceRoot": "/var/task"
	},
	"exclude": ["node_modules", "**/*.test.ts"]
}

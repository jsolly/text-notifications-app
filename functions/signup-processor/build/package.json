{
	"name": "text-me-when",
	"type": "module",
	"version": "0.0.1",
	"private": true,
	"workspaces": ["shared", "functions/*"],
	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro check && astro build && node scripts/process-html.mjs",
		"preview": "astro preview",
		"astro": "astro",
		"lint": "eslint . --ext .ts,.astro",
		"lint-fix": "biome lint --write --no-errors-on-unmatched --files-ignore-unknown=true .",
		"format": "biome format --no-errors-on-unmatched --files-ignore-unknown=true --write .",
		"type-check": "tsc --noEmit -p tsconfig.json",
		"test": "vitest --no-watch",
		"prepare": "if [ -z \"$CI\" ]; then husky; fi",
		"generate-images": "node --loader ts-node/esm scripts/svg-to-png.ts",
		"clean": "rm -rf dist",
		"build:lambda": "cd shared && npm run build && cd ../functions && ./build.sh",
		"deploy:lambda": "sam build && sam deploy"
	},
	"dependencies": {
		"@astrojs/alpinejs": "^0.4.0",
		"@astrojs/check": "^0.9.4",
		"@astrojs/sitemap": "^3.2.1",
		"@astrojs/tailwind": "^5.1.3",
		"@astrojs/vue": "^5.0.6",
		"@heroicons/vue": "^2.1.1",
		"@neondatabase/serverless": "^0.10.4",
		"@types/alpinejs": "^3.13.11",
		"@vueuse/core": "^12.5.0",
		"alpinejs": "^3.13.5",
		"astro": "^4.4.15",
		"fuse.js": "^7.0.0",
		"globby": "^14.0.2",
		"html-minifier": "^4.0.0",
		"jsdom": "^24.1.3",
		"libphonenumber-js": "^1.11.19",
		"pg": "^8.13.3",
		"sharp": "^0.33.5",
		"tailwindcss": "^3.4.16",
		"vue": "^3.4.21",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/aws-lambda": "^8.10.147",
		"@types/node": "^20.11.24",
		"@types/pg": "^8.11.11",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"vitest": "^3.0.5",
		"@astrojs/vue": "^3.1.1",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"eslint-plugin-astro": "^0.31.4"
	},
	"lint-staged": {
		"*": [
			"biome format --write --no-errors-on-unmatched --files-ignore-unknown=true",
			"biome lint --write --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	}
}

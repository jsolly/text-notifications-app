---
import Layout from "../layouts/Layout.astro";
import SignUpForm from "../components/SignUpForm.astro";

const pageTitle = "Stay Connected with Text Notifications";
const pageDescription =
	"Get timely updates about the events that matter to you, delivered straight to your phone. Sign up for our text notification service today!";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
>
  <div class="relative min-h-screen overflow-hidden">
    <!-- Top hero pattern -->
    <div class="absolute top-0 left-0 w-full h-96 z-0 opacity-50">
      <img src="/images/hero-pattern.svg" alt="" class="w-full h-full object-cover" />
    </div>
    
    <!-- Bottom wave pattern -->
    <div class="absolute bottom-0 left-0 w-full h-64 z-0">
      <img src="/images/wave-pattern.svg" alt="" class="w-full h-full object-cover" />
    </div>
    
    <!-- Main content -->
    <div class="container mx-auto px-4 py-8 md:py-12 relative z-10">
      <header class="text-center mb-8 md:mb-12">
        <div class="flex justify-center mb-4">
          <div class="bg-white/80 backdrop-blur-sm p-3 rounded-full shadow-md border border-indigo-100">
            <img src="/images/notification-icon.svg" alt="Notification Bell" class="w-8 h-8 text-indigo-600" />
          </div>
        </div>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-indigo-900 mb-3">
          Stay Connected with Text Notifications
        </h1>
        <p class="text-lg md:text-xl text-slate-600 max-w-2xl mx-auto">
          Get timely updates about the events that matter to you, delivered straight to your phone.
        </p>
      </header>
      
      <!-- Card container with shared background -->
      <div class="max-w-6xl mx-auto bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-indigo-100 overflow-hidden">
        <div class="flex flex-col lg:flex-row">
          <!-- Form section -->
          <div class="w-full lg:w-1/2 p-6 md:p-8 border-b lg:border-b-0 lg:border-r border-indigo-100">
            <div class="max-w-md mx-auto">
              <SignUpForm />
            </div>
          </div>
          
          <!-- Illustration section -->
          <div class="w-full lg:w-1/2 p-6 md:p-8 bg-gradient-to-br from-indigo-50/50 to-blue-50/50">
            <div class="max-w-md mx-auto">
              <div class="relative animate-float mb-8">
                <img src="/images/phone-illustration.svg" alt="Phone with notifications" class="w-full max-w-xs mx-auto" />
                
                <!-- Notification dots animation -->
                <div class="absolute top-1/4 right-1/4 w-6 h-6 bg-indigo-500 rounded-full animate-pulse-slow shadow-lg shadow-indigo-500/30"></div>
                <div class="absolute top-1/3 left-1/4 w-4 h-4 bg-blue-400 rounded-full animate-pulse-slow shadow-lg shadow-blue-400/30" style="animation-delay: 1s;"></div>
                <div class="absolute bottom-1/3 right-1/3 w-5 h-5 bg-indigo-400 rounded-full animate-pulse-slow shadow-lg shadow-indigo-400/30" style="animation-delay: 2s;"></div>
              </div>
              
              <!-- Features list -->
              <div class="bg-white/80 backdrop-blur-sm rounded-xl p-5 shadow-lg border border-indigo-100">
                <h3 class="text-xl font-semibold text-indigo-900 mb-4 flex items-center">
                  <img src="/images/notification-icon.svg" alt="" class="w-5 h-5 mr-2 text-indigo-600" />
                  Why Choose Our Text Notifications?
                </h3>
                <ul class="space-y-3">
                  <li class="flex items-start">
                    <div class="bg-indigo-100 p-1.5 rounded-lg mr-3 mt-0.5">
                      <img src="/images/message-icon.svg" alt="" class="w-4 h-4 text-indigo-600" />
                    </div>
                    <div>
                      <span class="font-medium">Instant Alerts</span>
                      <p class="text-sm text-slate-600">Get notified immediately for time-sensitive events</p>
                    </div>
                  </li>
                  <li class="flex items-start">
                    <div class="bg-indigo-100 p-1.5 rounded-lg mr-3 mt-0.5">
                      <img src="/images/calendar-icon.svg" alt="" class="w-4 h-4 text-indigo-600" />
                    </div>
                    <div>
                      <span class="font-medium">Daily Summaries</span>
                      <p class="text-sm text-slate-600">Receive daily digests to keep you informed</p>
                    </div>
                  </li>
                  <li class="flex items-start">
                    <div class="bg-indigo-100 p-1.5 rounded-lg mr-3 mt-0.5">
                      <img src="/images/mobile-icon.svg" alt="" class="w-4 h-4 text-indigo-600" />
                    </div>
                    <div>
                      <span class="font-medium">Mobile Friendly</span>
                      <p class="text-sm text-slate-600">Works seamlessly on any mobile device</p>
                    </div>
                  </li>
                  <li class="flex items-start">
                    <div class="bg-indigo-100 p-1.5 rounded-lg mr-3 mt-0.5">
                      <img src="/images/shield-icon.svg" alt="" class="w-4 h-4 text-indigo-600" />
                    </div>
                    <div>
                      <span class="font-medium">Secure & Private</span>
                      <p class="text-sm text-slate-600">Your data is always protected and private</p>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Testimonial section -->
      <div class="mt-12 max-w-4xl mx-auto bg-white/90 backdrop-blur-sm rounded-xl p-6 md:p-8 shadow-lg border border-indigo-100">
        <div class="flex flex-col md:flex-row items-center gap-6">
          <div class="w-16 h-16 md:w-20 md:h-20 bg-indigo-100 rounded-full flex items-center justify-center flex-shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 md:h-10 md:w-10 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <div>
            <p class="text-lg text-slate-700 italic mb-4">"This notification service has been a game-changer for our team. We never miss important updates and the daily summaries keep everyone in the loop."</p>
            <div class="flex items-center">
              <div class="mr-3">
                <p class="font-semibold text-indigo-900">Sarah Johnson</p>
                <p class="text-sm text-slate-600">Product Manager</p>
              </div>
              <div class="flex text-yellow-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Footer -->
    <footer class="relative z-10 mt-12 py-6 text-center">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="mb-4 md:mb-0">
            <div class="flex items-center justify-center md:justify-start">
              <img src="/images/notification-icon.svg" alt="Logo" class="w-5 h-5 mr-2 text-indigo-600" />
              <span class="text-lg font-semibold text-indigo-900">TextNotifications.app</span>
            </div>
          </div>
          <div class="text-sm text-slate-600">
            <p>© {new Date().getFullYear()} TextNotifications.app • All rights reserved</p>
          </div>
          <div class="mt-4 md:mt-0 flex space-x-4">
            <a href="#" class="text-indigo-600 hover:text-indigo-800 transition-colors">
              <span class="sr-only">Twitter</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
              </svg>
            </a>
            <a href="#" class="text-indigo-600 hover:text-indigo-800 transition-colors">
              <span class="sr-only">GitHub</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </footer>
  </div>
</Layout>
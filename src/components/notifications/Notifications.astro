---
import NotificationCategory from "./NotificationCategory.astro";
import NotificationItem from "./NotificationItem.astro";
---

<section>
  <h2 class="text-lg font-semibold text-indigo-900 mb-4 flex items-center">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
    </svg>
    Notifications
  </h2>
  
  <!-- Nature & Sky Events Category -->
  <NotificationCategory 
    title="Nature & Sky Events" 
    description="Get notified about astronomical events and sky phenomena"
  >
    <NotificationItem 
      id="sunset-alert"
      value="sunset-alert"
      label="Sunset Alert"
      description="Get notified when the sun is setting"
      badgeType="instant"
    />
    
    <NotificationItem 
      id="fullmoon"
      value="fullmoon"
      label="Full Moon"
      description="Get notified when there's a full moon"
      badgeType="scheduled"
    />
    
    <NotificationItem 
      id="nasa"
      value="nasa"
      label="NASA Image of the Day"
      description="Daily astronomical photographs and explanations from NASA's archives"
      badgeType="daily"
    />
  </NotificationCategory>
  
  <!-- Daily Life Category -->
  <NotificationCategory 
    title="Daily Life" 
    description="Practical notifications to help plan and enhance your day"
    isLastCategory={true}
  >
    <NotificationItem 
      id="weatherOutfit"
      value="weatherOutfit"
      label="Weather & Outfit Planning"
      description="Start your day with the weather and outfit planning"
      badgeType="daily"
    />
    
    <NotificationItem 
      id="dailyRecipe"
      value="dailyRecipe"
      label="Recipe Suggestions"
      description="Receive a daily recipe suggestion with ingredients and preparation instructions"
      badgeType="daily"
    />
  </NotificationCategory>
</section> 
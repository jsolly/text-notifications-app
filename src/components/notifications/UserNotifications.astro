---
import { NOTIFICATION_SCHEMA } from "../../../shared/types/form.schema";
---
<section class="notifications">
	<h3 class="text-lg font-semibold text-slate-800 mb-3 border-b border-slate-200 pb-2">Notifications</h3>
	<div class="space-y-3 pl-1">
		{Object.entries(NOTIFICATION_SCHEMA)
			.map(([name, def]) => {
				return (
					<div class="flex items-center">
						<input
							type="checkbox"
							id={name}
							name={name}
							aria-label={def.formLabel}
							aria-describedby={`${name}-description`}
							class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
						/>
						<label for={name} class="ml-2 block text-sm text-gray-900">
							{def.formLabel}
						</label>
					</div>
				);
			})}
	</div>
</section> 
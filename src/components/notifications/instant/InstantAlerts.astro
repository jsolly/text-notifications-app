---
import SingleCheckbox from "../SingleCheckbox.astro";

const instantAlerts = [
	{
		id: "sunset-alert",
		label: "Sunset Alert",
		description: "Get notified when the sun is setting",
	},
];
---

<div class="mb-8 mt-4">
  <div class="flex items-center space-x-2 mb-3">
    <div class="h-2 w-2 bg-red-500 rounded-full"></div>
    <h3 class="text-sm font-medium text-slate-600">Instant Alerts</h3>
  </div>

  <div class="space-y-3 pl-1">
    <p class="text-sm text-slate-600 mb-3">
      These notifications will be sent immediately when triggered
    </p>
    
    {instantAlerts.map(alert => (
      <SingleCheckbox 
        id={alert.id}
        label={alert.label}
        description={alert.description}
      />
    ))}
  </div>
</div> 